{
    "name": "D3 Debugger",
    "version": "0.1",
    "description": "A bare-bones example of communication between devtools and an inspected page",
    "devtools_page": "devtools.html",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_idle",
            "css": [
                "inserted-styles.css"
            ],
            "js": [
                "lib/jquery-3.5.0.min.js",
                "lib/d3.js",
                "content-script.js"            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "manifest_version": 2,
    "web_accessible_resources": [
        "activate-hover.js",
        "activate-hover-bundled.js",
        "background.js"
    ]
}