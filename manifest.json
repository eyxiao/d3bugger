{
    "name": "D3 Debugger",
    "version": "0.1",
    "description": "A bare-bones example of communication between devtools and an inspected page",
    "devtools_page": "devtools.html",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "inserted-styles.css"
            ],
            "js": [
                "jquery-3.5.0.min.js",
                "d3.js",
                "content-script.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "manifest_version": 2,
    "web_accessible_resources": [
        "activate-hover.js"
    ]
}